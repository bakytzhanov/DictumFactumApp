<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.LawFragment"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:stretchColumns="*"
        android:layout_centerInParent="true">
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1">

        <Button
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_height="192dp"
            android:layout_column="0"
            android:drawableTop="@drawable/fee"
            android:lines="2"
            android:text="Налоговые правоотношения
"
            android:textAlignment="center"
            android:textSize="10sp" />

        <Button
            android:id="@+id/button2"

            android:layout_width="0dp"
            android:layout_height="192dp"
            android:layout_column="1"
            android:drawableTop="@drawable/raw"
            android:lines="2"
            android:text="Сфера правоотношений недр и недропользования"
            android:textAlignment="center"
            android:textSize="10sp" />

    </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">
            <Button
                android:drawableTop="@drawable/family"
                android:textSize="10sp"

                android:id="@+id/button3"
                android:layout_width="0dp"
                android:layout_height="192dp"
                android:text="Семейные правоотношения"
                android:layout_column="0"
                android:textAlignment="center"/>

            <Button
                android:drawableTop="@drawable/work"
                android:textSize="10sp"

                android:id="@+id/button4"
                android:layout_width="0dp"
                android:layout_height="192dp"
                android:text="Трудовые правоотношения"
                android:layout_column="1"
                android:textAlignment="center"/>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <Button
                android:id="@+id/button5"
                android:layout_width="0dp"
                android:layout_height="192dp"
                android:layout_column="0"
                android:drawableTop="@drawable/police"
                android:lines="2"
                android:text="Уголовные правоотношения
"
                android:textAlignment="center"
                android:textSize="10sp" />

            <Button
                android:id="@+id/button6"

                android:layout_width="0dp"
                android:layout_height="192dp"
                android:layout_column="1"
                android:drawableTop="@drawable/border"
                android:lines="2"
                android:text="Таможенные правоотношения"
                android:textAlignment="center"
                android:textSize="10sp" />

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <Button
                android:id="@+id/button7"
                android:layout_width="0dp"

                android:layout_height="192dp"
                android:layout_column="0"
                android:drawableTop="@drawable/land"
                android:lines="2"
                android:text="Земельные правоотношения
"
                android:textAlignment="center"
                android:textSize="10sp" />

            <Button
                android:id="@+id/button8"
                android:layout_width="0dp"

                android:layout_height="192dp"
                android:layout_column="1"
                android:drawableTop="@drawable/work"
                android:lines="2"
                android:text="Административные правоотношения"
                android:textAlignment="center"
                android:textSize="10sp" />
        </TableRow>

</TableLayout>
</ScrollView>

</LinearLayout>